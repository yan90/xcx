<!--pages/cart/cart.wxml-->
<view class="page-box">
  <!-- 头部开始  -->
  <view class="cart-top">
    <view class="top-left">共一件商品</view>
    <view class="top-right" bindtap="delete">全部删除</view>
  </view>
  <!-- 头部结束 -->   

  <!-- 列表开始 -->
  <view class="item-list">
    <view class="item" wx:for="{{goodsList}}" wx:key="*this">
      <checkbox-group bindtap="checkbox"> 
        <checkbox value="1" checked="{{item.checked}}" > </checkbox>
      </checkbox-group>
      <view class="pic">
        <image src="{{item.goods_img}}">
        </image>
      </view>
      <view class="content">
        <view class="title">{{item.goods_name}}</view>
        <view class="desc">品牌</view>
        <view class="price-info">
          <view class="price">${{item.shop_price}}</view>
          <view class="number">
            <view class="decr">-</view>
            <input value="9"></input>
            <view class="incr">+</view>
          </view>
 
        </view>
      </view>
    </view>
  </view>
  <!-- 列表结束 -->

  <!-- 底部结算 开始 -->
  <view class="total-box">
    <view class="all">
      <checkbox-group bindchange="selectAll">
        <checkbox   />
        <text>全选</text>
      </checkbox-group>
    </view>
    <view class="total-price">
      总价：
      <text class="price">￥{{totalprice}}</text>
    </view>
    <view class="btn btn-default">去结算</view>
  </view>
  <!-- 底部结算 结束 -->
</view>